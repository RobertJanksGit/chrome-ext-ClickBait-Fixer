{
  "manifest_version": 3,
  "name": "No More Clickbait!",
  "version": "1.0",
  "description": "A Chrome extension to change news headlines for more accurate and less clickbaity content.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon48.png"
  },
  "permissions": ["activeTab", "scripting", "alarms", "storage"],
  "host_permissions": [
    "*://*/*",
    "https://no-more-clickbait-project.onrender.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["contentScript.js"]
    }
  ],
  "host_permissions": ["*://*/*"]
}
